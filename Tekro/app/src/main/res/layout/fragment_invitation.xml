<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$PlaceholderFragment"
    android:background="@color/theme_light">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bkg_invitation"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:id="@+id/layoutPaperInvitation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="@dimen/margin_xxsmall"
        android:paddingBottom="@dimen/margin_xxsmall"
        android:background="@color/theme_purple"
        android:alpha="0.75">

        <Button
            android:id="@+id/buttonGetPaperInvitation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_light"
            android:text="@string/home_button_get_invitation"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/textViewPaperInvitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_marginLeft="@dimen/margin_medium"
            android:text="@string/home_textview_sent_invitation"
            android:textColor="@color/theme_purple"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/progressBarPaperInvitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>
